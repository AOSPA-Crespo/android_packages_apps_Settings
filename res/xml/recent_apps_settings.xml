<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

<PreferenceCategory android:key="category_recent_general"
        android:title="@string/recent_apps_settings_title">

    <CheckBoxPreference
        android:key="pref_sense_recent"
        android:title="@string/sense_recent_title"
        android:summary="@string/sense_recent_summary"
        android:defaultValue="false"/>

    <CheckBoxPreference
        android:key="pref_recent_apps_icon"
        android:title="@string/recent_apps_icon_title"
        android:summary="@string/recent_apps_icon_summary"
        android:defaultValue="true"/>

    <ListPreference
        android:key="pref_recent_text_size"
        android:title="@string/recent_apps_font_size_title"
        android:summary="@string/recent_apps_font_size_summary"
        android:entries="@array/recents_font_entries"
        android:entryValues="@array/recents_font_values"
	android:defaultValue="14"/>

</PreferenceCategory>

</PreferenceScreen>
